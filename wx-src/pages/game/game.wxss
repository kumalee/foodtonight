/**game.wxss**/
.container {
  background-color: #fff;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}

@-webkit-keyframes rotate360{
  from {
    transform: rotate(0deg) scale(1.8);
  }
  to {
    transform: rotate(360deg) scale(1.8);
  }
}

@keyframes rotate360{
  from {
    transform: rotate(0deg) scale(1.8);
  }
  to {
    transform: rotate(360deg) scale(1.8);
  }
}

.ball {
  width: 300rpx;
  height: 264rpx;
  position: absolute;
  z-index: 999;
}

.ball.stop {
  -webkit-animation: rotate360 3s infinite;
  animation: rotate360 3s infinite;
}

.logo {
  width: 418rpx;
  height: 160rpx;
  bottom: 38rpx;
  position: absolute;
  z-index: 1;
  left: 50%;
  transform: translateX(-50%);
  opacity: 0.15;
}



.tip-play,
.tip-follow,
.tip-inhale,
.tip-exhale,
.tip-waiting,
.tip-cong {
  position: absolute;
  font-family: 'Lato', sans-serif;
  font-size: 16px;
  font-weight: 100;
  z-index: 1;
  display: none;
  line-height: 1.2;
  width: auto;
}

.tip-play.tip-en,
.tip-play.tip-waiting {
  min-width: 420rpx;
  text-align: center;
}
.tip-play.tip-cn {
  text-align: center;
}

.tip-play,
.tip-follow,
.tip-cong,
.tip-inhale,
.tip-exhale,
.tip-waiting {
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.tip-cong {
  z-index: 9999;
  color: #fff;
  top: auto;
  bottom: 70%;
  margin-left: -20rpx;
}

.tip-play {
  display: flex;
}