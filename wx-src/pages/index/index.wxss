/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 30vh;
  background-color: #292a2c;
  width: 100%;
  position: relative;
}

.userinfo-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.userinfo-avatar {
  width: 164rpx;
  height: 164rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.userinfo-nickname {
  font-size: 14px;
  color: #fff;
  font-family: 'Lato', sans-serif;
  padding-top: 10rpx;
}

.arrowup {
  height: 4vh;
  position: absolute;
  bottom: -2rpx;
  text-align: center;
}

.arrow-up {
  height: 4vh;
}

.usermotto {
  width: 100%;
  height: 70vh;
  background-color: #ffffff;
  position: relative;
}

.user-motto{
  font-family: "Palatino-Roman", serif;
  font-size: 18px;
  color: #404040;
  text-align: center;
  line-height: 1.2;
  padding-top: 45rpx;
}

.user-motto-1 {
  margin: 0;
}

.user-motto-2 {
  margin: 0;
}

.start {
  position: absolute;
  width: 160rpx;
	height: 160rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.start-back {
  position: absolute;
  margin: 0;
  padding: 0;
  width: 160rpx;
	height: 160rpx;
  border-radius: 50%;
  background-color: #000000;
	box-shadow: 0 2px 21px 16px #ceced2, 0 1px 4px 1px rgba(0, 0, 0, 0.39);
}

.start-triangle {
  position: absolute;
  top: 55rpx;
  left: 68rpx;
  width: 40rpx;
	height: 60rpx;
}

.start:active {
  width: 144rpx;
  height: 144rpx;
}

.start:active .start-back {
  width: 144rpx;
  height: 144rpx;
}

.start:active .start-triangle {
  width: 36rpx;
  height: 55rpx;
  left: 60rpx;
  top: 46rpx;
}

.logo {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 418rpx;
  height: 160rpx;
  bottom: 38rpx;
}