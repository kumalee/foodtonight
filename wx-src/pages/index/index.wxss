/**index.wxss**/
.container {
  background-color: #292a2c;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 25vh;
}

.userinfo-avatar {
  width: 164rpx;
  height: 164rpx;
  margin-top: 64rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

.userinfo-nickname {
  font-size: 14px;
  color: #fff;
  font-family: 'Lato', sans-serif;
}

.arrowup {
  height: 3vh;
}

.arrow-up {
  align-content: flex-end;
  height: 3vh;
}

.usermotto {
  width: 100%;
  height: 72vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.user-motto{
  padding-bottom: 30rpx;
  font-family: "Palatino-Roman", serif;
  font-size: 18px;
  color: #404040;
  line-height: 2.5;
  text-align: center;
}

.start {
  position: relative;
  width: 160rpx;
	height: 160rpx;
}

.start-back {
  position: absolute;
  margin: 0 auto;
  padding: 0;
  width: 160rpx;
	height: 160rpx;
  border-radius: 50%;
  background-color: #000000;
	box-shadow: 0 2px 21px 16px #ceced2, 0 1px 4px 1px rgba(0, 0, 0, 0.39);
}

.start-triangle {
  position: absolute;
  top: 55rpx;
  left: 68rpx;
  width: 40rpx;
	height: 60rpx;
}

.start:active {
  width: 144rpx;
  height: 144rpx;
}

.start:active .start-back {
  width: 144rpx;
  height: 144rpx;
}

.start:active .start-triangle {
  width: 36rpx;
  height: 55rpx;
  left: 60rpx;
  top: 46rpx;
}

.logo {
  width: 418rpx;
  height: 160rpx;
  padding-bottom: 38rpx;
}