/**game.wxss**/
.container {
  background-color: #efeff4;
  height: 100vh;
  width: 100%;
  position: relative;
}

.section-header {
  width: 100%;
  height: 30vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.asbo150png {
  width: 190rpx;
  height: 260rpx;
  margin-top: 18rpx;
}

.asbo150-name {
	font-size: 14px;
	color: #404040;
  display: flex;
  justify-content: flex-start;
}

.section-footer {
  width: 100%;
  height: 70vh;
  background-color: white;
}

.form {
  display: block;
  margin-top: 72rpx;
  margin-bottom: 0;
  width: 100%;
}

.input {
  border-bottom: 2rpx solid #979797;
  width: 592rpx;
  margin: 0 auto;
  margin-bottom: 46rpx;
  font-size: 18px;
  height: 70rpx;
}

.input-placeholder{
  color: #ceced2;
}

.delivery-desc {
  display: block;
  width: 592rpx;
  margin: 0 auto;
  margin-top: 104rpx;
  font-family: Lato, sans-serif;
  font-size: 14px;
	font-weight: normal;
	font-style: normal;
	font-stretch: normal;
	line-height: normal;
	letter-spacing: normal;
	text-align: center;
	color: #ceced2;
}

.send {
  margin: 0 auto;
  margin-top: 38rpx;
  width: 592rpx;
  height: 132rpx;
  border-radius: 12rpx;
  color: white;
  background-color: black;
  font-family: Lato, sans-serif;
  font-size: 20px;
  line-height: 132rpx;
  font-weight: 300;
  letter-spacing: 3.3px;
  text-align: center;
}

.picker-view-wrapper {
  width:100%;
  height: auto;
  position:fixed;
  z-index:2;
  bottom:0;
  background: #fff;
  border-top: 1px solid #ddd;
}

.picker-view {
  width: 100%;
  height: 300px;
  clear:both;
}

.picker-view-column {
  line-height: 50px;
  text-align:center;
}

button[size="mini"] {
  float: right;
  margin-right: 10px;
  margin-top: 10px;
}




